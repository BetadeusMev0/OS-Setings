<Window x:Class="OS_Settings.dialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OS_Settings"
        mc:Ignorable="d"
        Title="dialog" Height="100" Width="200">
    <Grid>
        <Label Content="Желаете перезапустить систему?"/>
        <Button VerticalAlignment="Bottom" Height="30" HorizontalAlignment="Left" Width="70" Margin="10" Content="Конечно" x:Name="yesButton" Click="yesButton_Click"/>
        <Button VerticalAlignment="Bottom" Height="30" HorizontalAlignment="Right" Width="70" Margin="10" Content="Нет :(" x:Name="noButton" Click="noButton_Click"/>
    </Grid>
</Window>
